<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<h2><%= dose.ingredient.name %></h2>
<p><%= dose.description %></p>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<p><%=link_to 'delete', dose_path(dose), method: 'delete' %></p>
<% end %>
<p><%= link_to "Back to list", root_path %></p>
<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>


