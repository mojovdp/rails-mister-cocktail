<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<h2><%= dose.ingredient.name %></h2>
<p><%= dose.description %></p>
<p><%=link_to 'delete', dose_path(dose), method: 'delete' %></p>
<% end %>
<p><%= link_to "Back to list", cocktails_path %></p>
<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>


