<h1>Add a new Cocktail</h1>
<%= simple_form_for(@cocktail) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-inputs">
    <%= f.input :photo %>
  </div>
  <div class="form-inputs">
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-actions">
     <%= f.submit "add", class: "btn btn-primary" %>
  </div>
<% end %>
<p><%= link_to "Back to list", cocktails_path %></p>
